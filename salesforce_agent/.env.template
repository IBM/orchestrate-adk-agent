# .env.template for Salesforce Agent
# Copy this file to .env and fill in your Salesforce credentials.
# Do NOT commit your actual .env file with secrets to version control.

# Salesforce username (e.g., user@company.com)
SF_USERNAME=

# Salesforce password (your account password)
SF_PASSWORD=

# Salesforce security token (see Salesforce settings)
SF_SECURITY_TOKEN=

# Salesforce domain: 'login' for production, 'test' for sandbox
SF_DOMAIN=login

# Optional: Enable debug logging (set to 'true' for verbose output)
SF_DEBUG=false

# Salesforce Credentials Configuration
# Choose one of the authentication methods below and set the appropriate variables

# Method 1: Username/Password/Security Token (Most common)
# SF_USERNAME=your_username@example.com
# SF_PASSWORD=your_password
# SF_SECURITY_TOKEN=your_security_token
# SF_DOMAIN=login  # Use 'test' for sandbox, 'login' for production

# Method 2: Session ID (If you already have a session)
# SF_SESSION_ID=your_session_id
# SF_INSTANCE=your_instance_url  # e.g., na1.salesforce.com

# Method 3: Connected App (OAuth)
# SF_USERNAME=your_username@example.com
# SF_PASSWORD=your_password
# SF_CONSUMER_KEY=your_consumer_key
# SF_CONSUMER_SECRET=your_consumer_secret
# SF_DOMAIN=login  # Use 'test' for sandbox, 'login' for production

# Example for production org with username/password/token:
# SF_USERNAME=john.doe@company.com
# SF_PASSWORD=mypassword123
# SF_SECURITY_TOKEN=abc123def456
# SF_DOMAIN=login

# Example for sandbox org:
# SF_USERNAME=john.doe@company.com.sandbox
# SF_PASSWORD=mypassword123
# SF_SECURITY_TOKEN=abc123def456
# SF_DOMAIN=test
